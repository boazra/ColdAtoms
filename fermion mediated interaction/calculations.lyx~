\begin_body

\begin_layout Standard
\begin_inset Formula 
\[
\hat{H}=\sum_{\left\{ k_{1},k_{2}\right\} }|g>\left[\sum_{e}\frac{\left\langle g\left|\hat{H}_{BF}\right|e\left\rangle \right\langle e\left|\hat{H}_{BF}\right|g\right\rangle }{\left(E_{e}-E_{g}\right)}\right]<g|
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\langle e\left|\hat{H}_{BF}\right|g\right\rangle =g_{BF}\int\frac{d^{3}\left\{ \boldsymbol{k}_{1}^{'},\boldsymbol{k}_{1},\boldsymbol{k}_{2}^{'},\boldsymbol{k}_{2}\right\} }{\left(2\pi\right)^{9}}\hat{\psi}^{\dagger}\left(\boldsymbol{k}_{1}^{'}\right)\hat{\psi}^{\dagger}\left(\boldsymbol{k}_{1}\right)\times\delta^{3}\left(\boldsymbol{k}_{1}-\boldsymbol{k}_{1}^{'}+\boldsymbol{k}_{i}-\boldsymbol{k}_{f}\right)\left\langle e\left|\hat{\phi}^{\dagger}\left(\boldsymbol{k}_{f}\right)\hat{\phi}\left(\boldsymbol{k}_{i}\right)\right|g\right\rangle 
\]

\end_inset


\begin_inset Formula 
\[
\left\langle e\left|\hat{\phi}^{\dagger}\left(\boldsymbol{k}_{f}\right)\hat{\phi}\left(\boldsymbol{k}_{i}\right)\right|g\right\rangle \left\langle g\left|\hat{\phi}^{\dagger}\left(\boldsymbol{k}_{i}\right)\hat{\phi}\left(\boldsymbol{k}_{f}\right)\right|e\right\rangle =\Theta\left(\left|\boldsymbol{k}_{F}-\boldsymbol{k}_{i}\right|\right)\Theta\left(\left|\boldsymbol{k}_{f}-\boldsymbol{k}_{F}\right|\right)
\]

\end_inset

Assuming small fermions
\begin_inset Formula 
\[
E_{e}-E_{g}=\frac{\hbar^{2}}{2m_{f}}\left(k_{f}^{2}-k_{i}^{2}\right)
\]

\end_inset

without this assumption
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
E_{e}-E_{g}=\frac{\hbar^{2}}{2m_{f}}\left(k_{f}^{2}-k_{i}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{1}^{'2}-k_{1}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{2}^{'2}-k_{2}^{2}\right)
\]

\end_inset

Trigonometric considerations : 
\begin_inset Formula 
\[
\vec{q}=\vec{k_{f}}-\vec{k_{i}}
\]

\end_inset


\begin_inset Formula 
\[
k_{f}^{2}=k_{i}^{2}+q^{2}-2k_{i}q\cos\left(\theta\right)
\]

\end_inset

where 
\begin_inset Formula $\theta$
\end_inset

 is the angle between 
\begin_inset Formula $\vec{k}_{i}$
\end_inset

 and 
\begin_inset Formula $\vec{q}$
\end_inset

.
 The same goes for 
\begin_inset Formula 
\[
k_{1}^{'2}=k_{1}^{2}+q^{2}-2k_{1}q\cos\left(180-\theta\right)=k_{1}^{2}+q^{2}+2k_{1}q\cos\left(\theta\right)
\]

\end_inset


\begin_inset Formula 
\[
k'_{2}^{2}=k_{2}^{2}+q^{2}-2k_{2}q\cos\left(\theta\right)
\]

\end_inset

And so the differences are
\begin_inset Formula 
\begin{align*}
E_{e}-E_{g} & =\frac{\hbar^{2}}{2m_{f}}\left(k_{f}^{2}-k_{i}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{1}^{'2}-k_{1}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{2}^{'2}-k_{2}^{2}\right)\\
= & \frac{\hbar^{2}}{2m_{f}}\left(k_{i}^{2}+q^{2}-2k_{i}q\cos\left(\theta\right)-k_{i}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{1}^{2}+q^{2}+2k_{1}q\cos\left(\theta\right)-k_{1}^{2}\right)+\frac{\hbar^{2}}{2m_{b}}\left(k_{2}^{2}+q^{2}-2k_{2}q\cos\left(\theta\right)-k_{2}^{2}\right)\\
= & \frac{\hbar^{2}}{2m_{f}}\left(q^{2}-2k_{i}q\cos\left(\theta\right)\right)+\frac{\hbar^{2}}{2m_{b}}\left(q^{2}+2k_{1}q\cos\left(\theta\right)\right)+\frac{\hbar^{2}}{2m_{b}}\left(q^{2}-2k_{2}q\cos\left(\theta\right)\right)\\
= & \frac{\hbar^{2}q}{2}\left[\frac{1}{m_{f}}\left(q-2k_{i}\cos\left(\theta\right)\right)+\frac{2}{m_{b}}\left(q+\left(k_{1}-k_{2}\right)\cos\left(\theta\right)\right)\right]\\
= & \frac{\hbar^{2}q}{2m_{f}m_{b}}\left[m_{b}\left(q-2k_{i}\cos\left(\theta\right)\right)+2m_{f}\left(q+\left(k_{1}-k_{2}\right)\cos\left(\theta\right)\right)\right]
\end{align*}

\end_inset

So the Hamiltonian is
\begin_inset Formula 
\[
\hat{H}'=\frac{1}{2}\int\frac{d^{3}\left\{ \boldsymbol{k}_{1}^{'},\boldsymbol{k}_{1},\boldsymbol{k}_{2}^{'},\boldsymbol{k}_{2}\right\} }{\left(2\pi\right)^{12}}\hat{\psi}^{\dagger}\left(\boldsymbol{k}_{1}^{'}\right)\hat{\psi}\left(\boldsymbol{k}_{1}\right)\hat{\psi}^{\dagger}\left(\boldsymbol{k}_{2}^{'}\right)\hat{\psi}\left(\boldsymbol{k}_{2}\right)\times\delta^{3}\left(\boldsymbol{k}_{1}-\boldsymbol{k}_{1}^{'}+\boldsymbol{k}_{2}^{'}-\boldsymbol{k}_{2}\right)\left[G\times{\cal F}\left(q,k_{1},k_{2}\right)\right]
\]

\end_inset

Where 
\begin_inset Formula 
\[
G=\frac{4m_{f}g_{BF}^{2}}{\hbar^{2}}
\]

\end_inset

and 
\begin_inset Formula 
\[
{\cal F}\left(q,k_{1},k_{2}\right)=\frac{\left(2\pi\right)^{4}}{q}\int dk_{i}\int d\left(cos\theta\right)\frac{k_{i}^{2}}{\left(q-2k_{i}\cos\left(\theta\right)\right)+2\nicefrac{m_{f}}{m_{b}}\left(q+\left(k_{1}-k_{2}\right)\cos\left(\theta\right)\right)}
\]

\end_inset


\begin_inset Formula 
\[
{\cal F}\left(q,k_{1},k_{2}\right)=\frac{\left(2\pi\right)^{4}}{q}\int dk_{i}\int d\left(cos\theta\right)\frac{k_{i}^{2}}{q\left(1+2\nicefrac{m_{f}}{m_{b}}\right)-2\left(k_{i}+\nicefrac{m_{f}}{m_{b}}\left(k_{1}-k_{2}\right)\right)\cos\left(\theta\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-4k_{F}^{2}q-q^{2}Log[2-q]+4Log[-2+q]+q^{2}Log[-q]-q^{2}Log[q]+(-4+q^{2})Log[2+q]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-4k_{F}q-q^{2}Log[\frac{2k_{F}-q}{2k_{F}+q}]+4k_{F}^{2}Log[\frac{-2k_{F}+q}{2k_{F}+q}]
\]

\end_inset


\begin_inset Formula 
\[
\frac{1}{16}(-4kq-q^{2}Log[2k-q]+4k^{2}Log[-2k+q]-4k^{2}Log[2k+q]+q^{2}Log[2k+q])
\]

\end_inset


\begin_inset Formula 
\[
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
-68q-68aq
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Log\left[\frac{-2k_{F}-2b+q+aq}{(1+a)q}\right]\left\{ -12b^{2}+8abq-a^{2}q^{2}-8k_{F}b+8bq-2aq^{2}-q^{2}+8b^{2}Log[2]+8b^{2}Log[(k_{F}+b)/(q+aq)]+4k_{F}^{2}\right\} 
\]

\end_inset


\begin_inset Formula 
\[
Log[(1+a)q]\left\{ 4k_{F}^{2}-8k_{F}b-8b^{2}Log[b]+8b^{2}Log[k_{F}+b]\right\} 
\]

\end_inset


\begin_inset Formula 
\[
Log[\frac{-2b+q+aq}{(1+a)q}]\left\{ 12b^{2}-8bq-8abq+q^{2}+2aq^{2}+a^{2}q^{2}-4b^{2}Log[4]-8b^{2}Log[b/(q+aq)]\right\} 
\]

\end_inset


\begin_inset Formula 
\[
Log[2b+q+aq]\left\{ -12b^{2}-8bq-8abq-q^{2}-2aq^{2}-a^{2}q^{2}+8b^{2}Log[-((2b)/(q+aq))]\right\} 
\]

\end_inset


\begin_inset Formula 
\[
Log[2k_{F}+2b+q+aq]\left\{ -4k_{F}^{2}+8k_{F}b+12b^{2}+8bq+8abq++2aq^{2}+a^{2}q^{2}-8b^{2}Log[-((2k_{F}+2b)/(q+aq))]\right\} 
\]

\end_inset


\begin_inset Formula 
\begin{align*}
+8b^{2}PolyLog[2,(-2k_{F}-2b+q+aq)/((1+a)q)]-8b^{2}PolyLog[2,(-2b+q+aq)/((1+a)q)]+8b^{2}PolyLog[2,(2b+q+aq)/(q+aq)]-8b^{2}PolyLog[2,(2k_{F}+2b+q+aq)/(q+aq)]
\end{align*}

\end_inset


\end_layout

